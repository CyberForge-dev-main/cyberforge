version: '3.8'

networks:
  cyberforge-network:
    driver: bridge

services:
  website:
    image: nginx:latest
    container_name: cyberforge-website
    volumes:
      - ./website:/usr/share/nginx/html:ro
    ports:
      - "3000:80"
    networks:
      - cyberforge-network
    restart: unless-stopped

  backend:
    build:
      context: ./backend
      dockerfile: Dockerfile
    container_name: cyberforge-backend
    ports:
      - "5000:5000"
    volumes:
      - ./backend:/app
    networks:
      - cyberforge-network
    restart: always

  challenge-1:
    build:
      context: ./challenges/ch1
      dockerfile: Dockerfile
    container_name: cyberforge-ch1
    ports:
      - "2222:22"
    networks:
      - cyberforge-network
    stdin_open: true
    tty: true
    restart: unless-stopped

  challenge-2:
    build:
      context: ./challenges/ch2
      dockerfile: Dockerfile
    container_name: cyberforge-ch2
    ports:
      - "2223:22"
    networks:
      - cyberforge-network
    stdin_open: true
    tty: true
    restart: unless-stopped

  challenge-3:
    build:
      context: ./challenges/ch3
      dockerfile: Dockerfile
    container_name: cyberforge-ch3
    ports:
      - "2224:22"
    networks:
      - cyberforge-network
    stdin_open: true
    tty: true
    restart: unless-stopped

  juice-shop:
    image: bkimminich/juice-shop:latest
    container_name: cyberforge-juice-shop
    ports:
      - "3001:3000"
    environment:
      - NODE_ENV=production
    networks:
      - cyberforge-network
    restart: unless-stopped
